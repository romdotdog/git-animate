{
	"name": "git-animate",
	"displayName": "git-animate",
	"description": "Visualize the creation of a git repository in Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:git-animate.animate",
		"onCommand:git-animate.start"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "gitanimate",
			"properties": {
				"gitanimate.playbackFolder": {
					"type": "string",
					"default": "%appdata%/git-animate"
				},
				"gitanimate.defaultWorkspaceJSON": {
					"type": "object",
					"default": {
						"editor.wordWrap": "on",
						"editor.formatOnSave": false
					}
				}
			}
		},
		"commands": [
			{
				"command": "git-animate.animate",
				"category": "Animate",
				"icon": "$(play-circle)",
				"title": "Visualize repository"
			},
			{
				"command": "git-animate.start",
				"enablement": "resourceFilename =~ /\\.gitanimate\\.md/",
				"category": "Animate",
				"icon": "$(play-circle)",
				"title": "Start animation"
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "git-animate.animate",
					"when": "config.git.enabled && !git.missing && gitOpenRepositoryCount != 0",
					"group": "3_footer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"parse-git-patch": "github:romdotdog/parse-git-patch",
		"simple-git": "^2.34.2"
	}
}
